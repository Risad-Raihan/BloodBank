<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Donor_ListActivity">

    <EditText
        android:id="@+id/search_by"
        android:layout_width="347dp"
        android:layout_height="64dp"
        android:layout_above="@+id/donerlist_view"
        android:hint="Search By Blood Group"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/donerlist_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/donerlist_view"
        android:layout_width="334dp"
        android:layout_height="539dp"
        android:layout_marginBottom="64dp"
        android:background="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>