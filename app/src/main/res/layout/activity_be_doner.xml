<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BeDonerActivity">


    <TextView
        android:id="@+id/signup_txt"
        android:layout_width="306dp"
        android:layout_height="62dp"
        android:text="Be A Donor"
        android:textColor="#F7F9F9"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <EditText
        android:id="@+id/dfullname"
        android:layout_width="284dp"
        android:layout_height="52dp"
        android:hint="Full Name"
        android:textColorHint="#8D8989"
        android:background="@drawable/edittex"
        android:textColor="#000000"
        android:drawableStart="@drawable/ic_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <EditText

        android:id="@+id/dgender"
        android:layout_width="284dp"
        android:layout_height="52dp"
        android:hint="Gender"
        android:textColorHint="#8D8989"
        android:textColor="#000000"
        android:drawableStart="@drawable/ic_name"
        android:background="@drawable/edittex"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24" />

    <EditText
        android:id="@+id/daddress"
        android:layout_width="284dp"
        android:layout_height="52dp"
        android:hint="Enter Address"
        android:textColorHint="#8D8989"
        android:inputType="text"
        android:textColor="#000000"
        android:drawableStart="@drawable/ic_password"
        android:background="@drawable/edittex"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <EditText
        android:id="@+id/dbloodgroup"
        android:layout_width="284dp"
        android:layout_height="52dp"
        android:background="@drawable/edittex"
        android:drawableStart="@drawable/ic_name"
        android:hint="Enter Blood Group"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#8D8989"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <EditText
        android:id="@+id/dphone"
        android:layout_width="284dp"
        android:layout_height="52dp"
        android:background="@drawable/edittex"
        android:drawableStart="@drawable/ic_name"
        android:hint="Enter Phone Number"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#8D8989"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

    <Button
        android:id="@+id/dsignup_btn"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:background="@drawable/btnshape"
        android:text="Be a Donor"
        android:textColor="#7C0A11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.798" />

    <EditText
        android:id="@+id/demail"
        android:layout_width="284dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Enter Email"
        android:textColorHint="#8D8989"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:drawableStart="@drawable/ic_email"
        android:background="@drawable/edittex"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.334" />


</androidx.constraintlayout.widget.ConstraintLayout>